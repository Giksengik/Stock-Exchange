<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StockExchange" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/primary_text</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name ="android:fontFamily">@font/montserrat_bold</item>
        <item name ="colorButtonNormal">@color/black</item>
    </style>

    <style name="Theme.StockExchange.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name ="colorButtonNormal">@color/black</item>
    </style>

    <style name="Theme.StockExchange.AppBarOverlay" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="Theme.StockExchange.PopupOverlay" parent="Theme.MaterialComponents.Light.NoActionBar" />
</resources>